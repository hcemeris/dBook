<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - dBook</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/dBook.js"></script>
</head>
<body class="arkaplan">
    @if (User.Identity.IsAuthenticated)
    {
            <nav class=" navbar navbar-expand-lg navbar-dark bg-dark fixed-top position-fixed" >

                <a class="navbar-brand" href="#">dBook</a>
                <button class="navbar-toggler btn-lg" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Home/HomePage" role="button">Anasayfa <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Book/BooksList" role="button">Kitaplar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Author/AuthorsList" role="button">Yazarlar</a>
                        </li>

                        <li class="nav-item dropdown">
                            <div class="dropdown-d">
                                <a class="nav-link dropdown-toggle dropbtn " style="color:#faf6f6" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Kategoriler
                                </a>

                                <div class="dropdown-content dropdown-menu " aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#">Edebiyat</a>
                                    <a class="dropdown-item" href="#">Roman</a>
                                    <a class="dropdown-item" href="#">deneme</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-left" role="search" method="post" action="~/Home/Search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search" name="_search">
                            <input type="submit" class="btn btn-light my-2 my-sm-0" value="Ara" />
                        </div>
                        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
                    </form>

                </div>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Profil","MyPage","User",new { username=User.Identity.Name},new { @style="color:#faf6f6" ,@class="nav-link btn btn-outline-secondary mr-3"})
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-secondary bg-danger" href="~/User/Logout" style="color:#faf6f6">Çıkış Yap</a>
                    </li>
                </ul>

            </nav>
    }
    else
    {
        
            <nav class=" navbar navbar-expand-lg navbar-dark bg-dark fixed-top position-fixed " style="border-radius:0;">

                <a class="navbar-brand" href="#">dBook</a>
                <button class="navbar-toggler btn-lg" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Home/Index" role="button">Anasayfa <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Book/BooksList" role="button">Kitaplar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" style="color:#faf6f6" href="~/Author/AuthorsList" role="button">Yazarlar</a>
                        </li>

                        <li class="nav-item dropdown">
                            <div class="dropdown-d">
                                <a class="nav-link dropdown-toggle dropbtn " style="color:#faf6f6" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Kategoriler
                                </a>

                                <div class="dropdown-content dropdown-menu " aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#">Edebiyat</a>
                                    <a class="dropdown-item" href="#">Roman</a>
                                    <a class="dropdown-item" href="#">deneme</a>
                                </div>
                            </div>
                        </li>

                    </ul>
                    <form class="navbar-form navbar-left" role="search" method="post" action="~/Home/Search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search" name="_search">
                            <input type="submit" class="btn btn-light my-2 my-sm-0" value="Ara" />
                        </div>
                        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
                    </form>

                </div>

            </nav>
        
    }


    <div class="body-content mt-2">
        <div class="container mt-5">
            @RenderBody()
        </div>
        <hr />
        <footer>

            <div class="fixed-bottom ortala ">
                <p>&copy; Copyright @DateTime.Now.Year - dBook Kitap Listeleme Sitesi</p>
            </div>

        </footer>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</body>
</html>