<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body class="arkaplan">
    <div class="fixed-top">


        <nav class="nav navbar navbar-expand-lg navbar-dark bg-dark ">

            <a class="navbar-brand" href="#">dBook</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-item nav-link" style="color:#faf6f6" href="~/Home/Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-item nav-link" style="color:#faf6f6" href="~/Book/BooksList">Kitaplar</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-item nav-link" style="color:#faf6f6" href="~/Author/AuthorsList">Yazarlar</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-item nav-link" style="color:#faf6f6" href="~/Home/Categories">Kategoriler</a>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <a href="# " class="btn btn-light my-2 my-sm-0" type="submit">Search</a>
                    </div>
                    <!-- <button type="submit" class="btn btn-default">Submit</button> -->
                </form>

            </div>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="ml-auto">
                    <li class="nav navbar-right">
                        <a class="nav-item" href="#girisyap" style="color:#faf6f6">Giriş Yap</a>&nbsp;&nbsp;
                    </li>
                    <li class="nav navbar-right">
                        <a class="nav-item" href="#üyeol" style="color:#faf6f6">Üye Ol</a>&nbsp;&nbsp;
                    </li>


                </ul>
            </div>
        </nav>
    </div>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>

            <div class="ortala">
                <p>&copy; Copyright @DateTime.Now.Year - dBook Kitap Listeleme Sitesi</p>
            </div>

        </footer>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</body>
</html>