@using dBook.ViewModels
@model AuthorListViewModel
@{
    ViewBag.Title = "AuthorsList";
}

@if (Model != null)
{
    <div class=row>
        <div class="col-md-8 ">

            <div class="row m-auto">
                <div class="row text-center w-100 m-auto">
                    <h2 class="m-auto font-weight-bold">Favori Yazarlar</h2>
                </div>
                <div class="row">
                    @foreach (var item in Model.MostFavorite)
                    {
                        <div class="col-md-4 d-flex align-items-stretch text-center mt-2">
                            <div class="card mt-1 mb-2 rounded m-auto" style="width: 22rem;">
                                <img src="~/img/AuthorPhoto/@item.AUTHOR_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@(item.AUTHOR_NAME+" "+item.AUTHOR_LASTNAME) Fotoğrafı">
                                <div class="card-body">
                                    <p class="card-text baslik">@item.AUTHOR_DESCRIPTION</p>
                                </div>
                                <a href="~/Author/TheAuthor/@item.AUTHOR_ID" class="btn btn-primary">@(item.AUTHOR_NAME + " " + item.AUTHOR_LASTNAME)</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row m-auto">
                <div class="row text-center w-100 m-auto">
                    <h2 class="m-auto font-weight-bold">Favori Yazarlar</h2>
                </div>
                <div class="row">
                    @foreach (var item in Model.MostReaded)
                    {
                        <div class="col-md-4 d-flex align-items-stretch text-center mt-2">
                            <div class="card mt-1 mb-2 rounded m-auto" style="width: 22rem;">
                                <img src="~/img/AuthorPhoto/@item.AUTHOR.AUTHOR_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@(item.AUTHOR.AUTHOR_NAME+" "+item.AUTHOR.AUTHOR_LASTNAME) Fotoğrafı">
                                <div class="card-body">
                                    <p class="card-text baslik">@item.AUTHOR.AUTHOR_DESCRIPTION</p>
                                </div>
                                <a href="~/Author/TheAuthor/@item.AUTHOR.AUTHOR_ID" class="btn btn-primary">@(item.AUTHOR.AUTHOR_NAME + " " + item.AUTHOR.AUTHOR_LASTNAME)</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        @*Arama*@
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="form-group">
                            <label for="author_name">Yazar Adı</label>
                            <input type="text" class="form-control" id="author_name" name="search" aria-describedby="Yazar Adı">
                        </div>
                        <button type="submit" class="btn btn-primary">Yazar Ara</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        @foreach (var item in Model.Authors)
                        {
                            <li class="list-group-item">
                                @(item.AUTHOR_NAME+" "+item.AUTHOR_LASTNAME)
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
        
    </div>
    <script src="~/Scripts/dBook.js"></script>
}
else
{
    <h1>Yazar yok</h1>
}
