@using dBook.ViewModels
@model AuthorViewModel;
@{
    ViewBag.Title = "AuthorsList";
}

@if (Model != null)
{
    <div class=row>
        <div class="col-md-12 ">

            <div class="maintitle navbar navbar-expand-lg ">
                <p class="navbar-brand" href="#">Kitaplar</p>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#kitaplar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="kitaplar">
                    <ul class="menu navbar-nav mr-auto ">
                        <li class="over1 nav-item"><a class="btn btn-outline-primary nav-link" href="#authorAdaGore" role="button" aria-controls="authorAdaGore" id="soneklenen">En Son Eklenenler</a></li>
                        <li class="over1 nav-item"><a class="btn btn-outline-primary nav-link" href="#authorFavoriSayi" role="button" aria-controls="authorFavoriSayi" id="cokokunan">En Çok Okunanlar</a></li>
                        <li class="over1 nav-item"><a class="btn btn-outline-primary nav-link" href="#authorEnCokOkunan" role="button" aria-controls="authorEnCokOkunan" id="cokokunan">En Çok Okunanlar</a></li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 d-flex align-items-stretch" >
                <div class="card mt-1 mb-2 rounded m-auto" style="width: 22rem;">
                    <img src="~/img/AuthorPhoto/@item.AUTHOR_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@(item.AUTHOR_NAME+" "+item.AUTHOR_LASTNAME) Fotoğrafı">
                    <div class="card-body">
                        <p class="card-text baslik">@item.AUTHOR_DESCRIPTION</p>
                    </div>
                    <a href="~/Author/TheAuthor/@item.AUTHOR_ID" class="btn btn-primary">@(item.AUTHOR_NAME + " " + item.AUTHOR_LASTNAME)</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>Yazar yok</h1>
}
