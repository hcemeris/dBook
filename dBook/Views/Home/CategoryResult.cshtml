@using dBook.ViewModels
@model dBook.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "CategoryResult";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="btn-group-lg" role="group" aria-label="...">
                @foreach (var item in Model.Categories)
                {
                   <button type="button" class="btn btn-success">@Html.ActionLink(item.NAME,"TheCategory","Home",new { id = item.CATEGORY_ID},null) </button>
                }

            </div>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center ">
                        <h3 class="font-weight-bold">Son Eklenen Kitaplar</h3>
                    </div>
                </div>
                <br />

                <div class="row">
                    @foreach (var item in Model.LastAdded)
                    {
                        <div class="col-3 d-flex align-items-stretch">
                            <div class="card mt-1 rounded" style="width: 26rem;">
                                <img src="~/img/BookPhoto/@item.BOOK_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@item.BOOK_NAME Fotoğrafı">
                                <div class="card-body ">
                                    <h5 class="card-title font-weight-bold text-center "><a href="~/Book/TheBook/@item.BOOK_ID">@item.BOOK_NAME</a></h5>
                                    <p class="card-text baslik ">@item.BOOK_DESCRIPTION</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item font-weight-bold">@(item.AUTHOR.AUTHOR_NAME + " " + item.AUTHOR.AUTHOR_LASTNAME)</li>
                                </ul>
                            </div>
                        </div>
                    }

                </div>
                <br />

                <div class="row">
                    <div class="col-12 text-center ">
                        <h3 class="font-weight-bold">En Çok Okunan Kitaplar</h3>
                    </div>
                </div>
                <br />

                <div class="row">
                    @foreach (var item in Model.MostReaded)
                    {
                        <div class="col-3 d-flex align-items-stretch">
                            <div class="card mt-1 rounded" style="width: 26rem;">
                                <img src="~/img/BookPhoto/@item.BOOK_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@item.BOOK_NAME Fotoğrafı">
                                <div class="card-body ">
                                    <h5 class="card-title font-weight-bold text-center "><a href="~/Book/TheBook/@item.BOOK_ID">@item.BOOK_NAME</a></h5>
                                    <p class="card-text baslik ">@item.BOOK_DESCRIPTION</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item font-weight-bold">@(item.AUTHOR.AUTHOR_NAME + " " + item.AUTHOR.AUTHOR_LASTNAME)</li>
                                </ul>
                            </div>
                        </div>
                    }

                </div>
                <br />


                <div>
                </div>

            </div>

        </div>

    </div>
</div>
