
@{
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 ortala">
                    <form method="post">

                        <div class="form-group">
                            <label class="col-sm-4 col-form-label" for="_username">Kullanıcı Adı</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" name="_username" id="_username" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 col-form-label" for="_password">Şifre</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" name="_password" id="_password" />

                            </div>
                        </div>
                        <div class="sagaGetir">
                            <button type="submit" class="btn btn-dark">Giriş Yap</button>
                        </div>
                    </form>
                    @ViewBag.error
                </div>
            </div>
        </div>
    </div>
</div>