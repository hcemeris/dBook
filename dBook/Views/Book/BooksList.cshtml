
@using dBook.ViewModels
@model dBook.ViewModels.BookListViewModel
@{
    ViewBag.Title = "BookList";
}


@if (Model != null)
{
    <div class="container-fluid">
        <div class=row>
            <div class="col-md-12 ">

                <div class="maintitle navbar navbar-expand-lg ">
                    <p class="navbar-brand" href="#">Kitaplar</p>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#kitaplar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse " id="kitaplar">
                        <ul class="menu navbar-nav mr-auto ">
                            <li class="over1 nav-item"><a class="btn btn-outline-primary nav-link" href="#example1" role="button" aria-controls="example1" id="soneklenen">En Son Eklenenler</a></li>
                            <li class="over1 nav-item"><a class="btn btn-outline-primary nav-link" href="#example4" role="button" aria-controls="example3" id="cokokunan">En Çok Okunanlar</a></li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>

        <div class="col-md-12">
        
            <div id="example1">
                <div class="row">
                    @foreach (var item in Model.LastAdded)
                    {
                        <div class="col-md-3 d-flex align-items-stretch">
                            <div class="card m-auto mt-2 rounded" style="width: 22rem; ">
                                <img src="~/img/BookPhoto/@item.BOOK_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@item.BOOK_NAME Fotoğrafı">
                                <div class="card-body ">
                                    <h5 class="card-title font-weight-bold text-center "><a href="~/Book/TheBook/@item.BOOK_ID">@item.BOOK_NAME</a></h5>
                                    <p class="card-text baslik ">@item.BOOK_DESCRIPTION</p>

                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item font-weight-bold">@(item.AUTHOR.AUTHOR_NAME + " " + item.AUTHOR.AUTHOR_LASTNAME)</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="example4">
                <div class="row">
                    @foreach (var item in Model.MostReaded)
                    {
                        <div class="col-3 d-flex align-items-stretch">
                            <div class="card m-auto mt-2 rounded" style="width:22rem;">
                                <img src="~/img/BookPhoto/@item.BOOK_PHOTO" class="card-img-top img-fluid m-auto" style="width:100%;height:300px;" alt="@item.BOOK_NAME Fotoğrafı">
                                <div class="card-body ">
                                    <h5 class="card-title font-weight-bold text-center "><a href="~/Book/TheBook/@item.BOOK_ID">@item.BOOK_NAME</a></h5>
                                    <p class="card-text baslik ">@item.BOOK_DESCRIPTION</p>

                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item font-weight-bold">@(item.AUTHOR.AUTHOR_NAME + " " + item.AUTHOR.AUTHOR_LASTNAME)</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/dBook.js"></script>

}
else
{
    <h1>Kitap yok</h1>
}